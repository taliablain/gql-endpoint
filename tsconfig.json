{
  "compilerOptions": {
    
    "target": "es2016",                                  
    "module": "commonjs",                               
    "outDir": "./dist",                                 
    "esModuleInterop": true,                         
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "skipLibCheck": true,                               
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
